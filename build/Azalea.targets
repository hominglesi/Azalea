<Project>
  <ItemGroup>
    <SoftAL Include="$(MSBuildThisFileDirectory)\..\native\soft_oal.dll" />
    <GLFW Include="$(MSBuildThisFileDirectory)\..\native\glfw3.dll" />
  </ItemGroup>
  <Target Name="CopySoftAL" BeforeTargets="Build">
    <Copy SourceFiles="@(SoftAL)" DestinationFolder="$(TargetDir)" />
  </Target>
  <Target Name="CopyGLFW" BeforeTargets="Build">
    <Copy SourceFiles="@(GLFW)" DestinationFolder="$(TargetDir)" />
  </Target>
</Project>